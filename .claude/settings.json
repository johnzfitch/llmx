{
  "respectGitignore": true,
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "1",
    "OTEL_METRICS_EXPORTER": "otlp",
    "OTEL_LOGS_EXPORTER": "otlp",
    "OTEL_EXPORTER_OTLP_PROTOCOL": "grpc",
    "OTEL_EXPORTER_OTLP_ENDPOINT": "http://localhost:4317",
    "OTEL_METRIC_EXPORT_INTERVAL": "60000",
    "OTEL_LOGS_EXPORT_INTERVAL": "50000",
    "DISABLE_ERROR_REPORTING": "1",

    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "29000",
    "CLAUDE_CODE_FILE_READ_MAX_OUTPUT_TOKENS": "25000",
    "BASH_MAX_OUTPUT_LENGTH": "20000",
    "TASK_MAX_OUTPUT_LENGTH": "20000",
    "MAX_THINKING_TOKENS": "25999",
    "MAX_MCP_OUTPUT_TOKENS": "25000",

    "MCP_TIMEOUT": "60000",
    "MCP_TOOL_TIMEOUT": "60000",
    "CLAUDE_CODE_GLOB_TIMEOUT_SECONDS": "5",

    "ENABLE_BTW": "true",
    "ENABLE_TOOL_SEARCH": "1",
    "ENABLE_LSP_TOOL": "1",
    "CLAUDE_CODE_EMIT_TOOL_USE_SUMMARIES": "1",
    "DISABLE_COST_WARNINGS": "1",
    "CLAUDE_CODE_DISABLE_FEEDBACK_SURVEY": "1",
    "CLAUDE_CODE_ADDITIONAL_PROTECTION": "1",
    "CLAUDE_CODE_DISABLE_OFFICIAL_MARKETPLACE_AUTOINSTALL": "1",
    "SLASH_COMMAND_TOOL_CHAR_BUDGET": "500",
    "ENABLE_CLAUDEAI_MCP_SERVERS": "1",
    "USE_BUILTIN_RIPGREP": "0",
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "1",
    "CLAUDE_CODE_GLOB_HIDDEN": "0",
    "CLAUDE_CODE_BUBBLEWRAP": "1",
    "CLAUDE_CODE_ENABLE_TASKS": "true",
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "true",
    "CLAUDE_CODE_SYNTAX_HIGHLIGHT": "true"
  },
  "permissions": {
    "allow": [
      "Bash(rg:*)",
      "Bash(fd:*)",
      "Bash(tree:*)",
      "Bash(tokei:*)",
      "Bash(eza:*)",
      "Bash(file:*)",
      "Bash(stat:*)",
      "Bash(wc:*)",
      "Bash(jq:*)",
      "Bash(uv:*)",
      "Bash(strings:*)",
      "Bash(bat:*)",
      "Bash(dust:*)",
      "Bash(ast-grep:*)",
      "Bash(pdfgrep:*)",
      "Bash(plocate:*)",
      "Bash(expac:*)",
      "Bash(inxi:*)",
      "Bash(fastfetch:*)",
      "Bash(chafa:*)",
      "Bash(pwd:*)",
      "Bash(which:*)",
      "Bash(realpath:*)",
      "Bash(readlink:*)",
      "Bash(basename:*)",
      "Bash(dirname:*)",
      "Bash(id:*)",
      "Bash(uname:*)",
      "Bash(date:*)",
      "Bash(diff:*)",
      "Bash(sha256sum:*)",
      "Bash(md5sum:*)",
      "Bash(xxd:*)",
      "Bash(readelf:*)",
      "Bash(nm:*)",
      "Bash(ldd:*)",
      "Bash(yara:*)",
      "Bash(pacman -Q:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)",
      "Bash(git show:*)",
      "Bash(git remote:*)",
      "Bash(git rev-parse:*)",
      "Bash(git ls-files:*)",
      "Bash(git stash list:*)",
      "Bash(git tag:*)"
    ],
    "deny": [],
    "defaultMode": "default",
    "enableAllProjectMcpServers": true,
    "enabledMcpjsonServers": []
  },
  "model": "claude-opus-4-5",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/pre-tool-use",
            "timeout": 30
          }
        ]
      },
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/read-guard",
            "timeout": 10
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/post-tool-use",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/read-compress",
            "timeout": 7
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/permission-request",
            "timeout": 10
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/stop",
            "timeout": 10
          }
        ]
      }
    ],
    "SubagentStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/subagent-start",
            "timeout": 10
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/subagent-stop",
            "timeout": 10
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/session-end",
            "timeout": 10
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "$HOME/.claude/statusline.sh",
    "padding": 5
  },
  "skipDangerousModePermissionPrompt": true,
  "cleanupperioddays": 7,
  "fileCheckpointingEnabled": true,
  "terminalProgressBarEnabled": false,
  "showExpandedTodos": true
}
